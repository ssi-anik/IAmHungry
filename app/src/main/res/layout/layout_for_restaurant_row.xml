<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical">

    <TextView
        android:id="@+id/textViewRestaurantName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:text="Restaurant name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textViewRestaurantNear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewRestaurantName"
        android:gravity="right"
        android:paddingBottom="5dp"
        android:text="Restaurant near"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textViewRestaurantType"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewRestaurantNear"
        android:gravity="right"
        android:paddingBottom="5dp"
        android:text="Restaurant type"
        android:textColor="#000000"/>
</RelativeLayout>